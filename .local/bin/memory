#! /bin/bash 

while true; do
    # Fetch memory information using the free command
    memory_info=$(free -m | awk 'NR==2{printf "Mem: %sMB / %sMB (%.2f%%)\n", $3,$2,$3*100/$2}')

    # Update the status bar using xsetroot
    xsetroot -name "$memory_info"

    # Sleep for a few seconds before updating again
    sleep 5
done &

# Start dwm
exec dwm
